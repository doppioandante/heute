{
  "manifest_version": 2,
  "name": "Heute",
  "version": "1.0",

  "description": "Stop procrastination by setting time limits on browsing.",

  "icons": {
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "alarms"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["countdown_overlay.js"],
      "css": ["countdown_overlay.css"]
    }
  ],
  "background": {
    "scripts": ["heute.js"]
  },
  "web_accessible_resources": ["landing.html"]
}

